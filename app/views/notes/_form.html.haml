= form_for(@note) do |f|
  - if @note.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@note.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @note.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :noteable_id
    %br
    = f.text_field :noteable_id
  .field
    = f.label :noteable_type
    %br
    = f.text_field :noteable_type
  .field
    = f.label :note
    %br
    = f.text_area :note

  .actions
    = f.submit
