%html
  %head
    %title= (yield(:title).present? ? yield(:title) : 'Projects to Profit').html_safe
    = stylesheet_link_tag 'flick/jquery-ui-1.8.4.custom', 'uniform.default', 'application', 'formtastic', 'formtastic_changes', 'colorbox'
    = yield :css
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
    = javascript_include_tag 'jquery-1.4.4.min', 'jquery-ui-1.8.4.custom.min', 'rails.jquery', 'jquery.uniform.min', 'jquery.gvChart-0.1', 'jquery.colorbox-min', 'raphael-min', 'g.raphael-min', 'g.pie-min', 'application'
    = csrf_meta_tag
    = yield :map
    = yield :js_lib
    %script{:type => 'text/javascript', :charset => 'utf-8'}
      $(document).ready(function() {
      = yield :on_ready
      });
      = yield :js
  %body
    #root
      #content
        .container= raw(flash_messages)
        .container= yield
      #root_footer
    #footer
      = render :partial => '/shared/footer'