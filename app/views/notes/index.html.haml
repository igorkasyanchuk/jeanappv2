%h1= t('.title')
%p= link_to t('.new_note'), new_note_path

%table
  %thead
    %tr
      %th= Note.human_attribute_name :noteable_id
      %th= Note.human_attribute_name :noteable_type
      %th= Note.human_attribute_name :note
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for note in @notes
      %tr{ :class => cycle(:odd, :even) }
        %td= note.noteable_id
        %td= note.noteable_type
        %td= note.note
        %td.action= link_to t('show'), [current_user, note]
        %td.action= link_to t('edit'), [:edit, current_user, note]
        %td.action= link_to t('destroy'), [current_user, note], :confirm => t('are_you_sure'), :method => :delete
