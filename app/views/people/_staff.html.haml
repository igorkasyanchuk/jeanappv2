.person{ :class => cycle(:odd, :even), :id => "staff-#{staff.id}" }
  .person_date
    .date= staff.created_at.to_date.to_s(:short_date)
    .time= staff.created_at.to_s(:time_12)
  .person_name= link_to staff.person.name, [current_user, staff.person]
  .person_description!= RedCloth.new(staff.description).to_html
  .hours_count= staff.hours_count
  .amount= number_to_currency(staff.amount, :precision => 2)
  .controls= link_to 'remove', [current_user, staff.project, staff], :remote => true, :method => :delete, :confirm => 'Are you sure?', :class => 'remove_item_button'
  .clear