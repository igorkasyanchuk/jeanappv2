- f.inputs do
  = f.input :email, :autocorrect => 'off', :autocapitalize => 'off'
  = f.input :first_name
  = f.input :last_name
  = f.input :password
  = f.input :password_confirmation
  = f.input :address

  = f.hidden_field :user_type, :value => 'owner'
  = f.input :taxes, :wrapper_html => { :class => 'owner_role none' }

- f.buttons do
  = f.submit "Sign up"