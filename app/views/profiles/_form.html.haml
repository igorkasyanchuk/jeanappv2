- f.inputs do
  = f.input :email, :autocorrect => 'off', :autocapitalize => 'off'
  = f.input :first_name
  = f.input :last_name
  = f.input :address
  - if current_user.owner?
    = f.input :taxes
  - else
    = f.input :hourly_rate, :label => 'Hourly Rate (as employee, $/hour)'

- f.buttons do
  = f.submit "Update Profile"