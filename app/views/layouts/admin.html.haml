- content_for :on_ready do
  == $('.#{controller_name}_menu').addClass('selected');
    
- content_for :css do
  = stylesheet_link_tag 'admin'

= inside_layout 'application' do
  #admin.container

    %ul.admin_menu
      - if current_user.owner?
        %li.projects_menu= link_to 'Projects', [current_user, :projects]
        %li.clients_menu= link_to 'Clients', [current_user, :clients]
        %li.people_menu= link_to 'Employees', [current_user, :people]
        %li.payments_menu= link_to 'Payments', [current_user, :payments]

      - else
        %li.other_projects_menu= link_to 'Projects', [current_user, :other_projects]

    %ul.admin_actions
      %li.profiles_menu= link_to current_user.name, edit_profile_path(current_user)
      %li= link_to 'Sign out', user_session_path, :method => :delete

  .container= yield
