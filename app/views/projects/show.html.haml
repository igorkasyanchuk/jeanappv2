= title @project.title

- if @project.has_client?
  %h1.left.project_name_on_page #{@project.ui_title} &mdash; #{link_to @project.client.name, [@project.user, @project.client], :class => 'client_name_on_page'} &mdash; #{@project.title}
- else
  %h1.left.project_name_on_page #{@project.ui_title} &mdash; #{@project.title}

.add.right{:style => 'margin-top: 2em'}
  = link_to 'Edit', edit_resource_path(@project), :class => 'edit_button'
.add.right{:style => 'margin-top: 2em'}
  = link_to 'Manage Employees', '#manage_employees_container', :class => 'add_button manage_employees'
.clear

= simple_format @project.description unless @project.description.blank?

%hr


#info= render :partial => '/projects/info', :locals => { :project => @project }

%h2.left Employees
.right.add= link_to 'Log Work', '#', :class => 'add_button', :to => '.new_job_form'
.clear
.staff.jobs
  = render 'jobs/jobs', :project => @project
= render 'jobs/form', :project => @project

%h2.left Own Hours
-#.right.work_action{ :class => @project.work_started? ? '' : 'none' }
  = link_to 'Cancel Work', cancel_work_user_project_own_hours_path(current_user, @project), :class => 'cancel_work_button', :remote => true

.right.work_action.stop_work_action{ :class => @project.work_started? ? '' : 'none' }
  = link_to 'Stop Work', stop_work_user_project_own_hours_path(current_user, @project), :class => 'stop_work_button', :remote => true

.right.work_action{ :class => @project.work_started? ? 'none' : '' }
  = link_to 'Log Time', start_work_user_project_own_hours_path(current_user, @project), :class => 'start_work_button', :remote => true
.right.stopwatch.none
  Time Spent:
  %span
    - if @project.time_working.present?
      = (@project.time_working * 1000).round
.right.add.add_own_hours_button{:class => @project.work_started? ? 'none' : ''}= link_to 'Add Time', '#', :class => 'add_button add_own_hours_time_button', :to => '.own_hour_form'
.clear
= render :partial => '/own_hours/own_hours', :locals => { :project => @project }
.add_more_block
  = semantic_form_for [current_user, @project, @project.own_hours.build], :remote => true, :html => { :class => 'none own_hour_form' } do |f|
    -#= float_to_duration(@project.time_working) if @project.time_working.present? 
    = f.inputs do
      -#= f.input :hours_count
      = f.input :duration, :hint => 'format: HH:MM:SS or just a number'
      = f.input :description, :input_html => { :rows => '2', :cols => '40' }
    = f.buttons do
      = f.submit 'Add own hours'
      = link_to 'Hide', '#', :class => 'hide cancel_button'


%h2.left Expenses
.right.add= link_to 'Add Expense', '#', :class => 'add_button', :to => '.expense_form'
.clear
= render :partial => '/expenses/expenses', :locals => { :project => @project }
.add_more_block
  = semantic_form_for [current_user, @project, @project.expenses.build], :remote => true, :html => { :class => 'none expense_form' } do |f|
    = f.inputs do
      = f.input :amount, :label => 'Amount, $'
      = f.input :description, :input_html => { :rows => '2', :cols => '40' }, :label => 'Expense Description'
    = f.buttons do
      = f.submit 'Add new expense'
      = link_to 'Hide', '#', :class => 'hide cancel_button'

%h2.left Invoices
.right.add= link_to 'Add Invoice', '#invoice_form_container', :class => 'add_button add_invoice2'
.clear

.all_invoices= render :partial => '/invoices/invoices', :locals => { :project => @project }

.none
  %a{:href => '#invoice_form_container', :class => 'add_invoice_button none'} Add Invoice
  #invoice_form_container
    = semantic_form_for [current_user, @project, @project.invoices.build], :remote => true, :html => { :class => 'invoice_form' } do |f|
      = f.inputs do
        = f.input :hours_count, :label => 'Hours'
        = f.input :hourly_rate, :label => 'Hourly Rate'
        = f.input :description, :input_html => { :rows => '4', :cols => '40' }, :label => 'Invoice Description'
      = f.buttons do
        = f.submit 'Add new invoice'
        = link_to 'Hide', '#', :class => 'hide cancel_button'

.none
  #manage_employees_container
    = render :partial => '/projects/employees', :locals => { :project => @project }   

      
- content_for :on_ready do
  init_add_form();
  init_add_invoice();
  init_project_show_page();
  init_manage_employees();
  init_own_hours_stopwatch();

= render :partial => '/notes/notes', :locals => { :noteable => @project }

= javascript_include_tag 'jquery.stopwatch'
