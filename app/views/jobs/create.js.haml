-if request.referer.include? user_other_projects_path(current_user)
  $e = "#{escape_javascript(render :partial => 'jobs', :locals => {:project => @job.project})}"

  == $('#jobs_#{@job.project.id}').html($e);
  =clear_fields

-elsif request.referer.include? user_projects_path(current_user)  

  $e = "#{escape_javascript(render :partial => '/people/staffs', :locals => { :project => @project })}"
  == $('.staff').html($e);
  =update_project_details(@project)
  =refresh_diagram(@project)
  =clear_fields